<h1>Square Results</h1>

<% input = params.fetch(:number) %>

<% if input == "" %>
  <% input= 0.0 %>
<% else %>
  <% input = input.to_f %>
<% end %>

<% results = input * input %>
<% results = results.to_f %>

<dl>
  <dt>Number</dt>
  <dd><%= input.to_i %></dd>
  <dt>Square</dt>
  <dd><%= results %></dd>
</dl>

<a href="/square/new">Calculate another square</a>
